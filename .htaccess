# Enable Rewrite Engine
RewriteEngine On

# -----------------------------------------
# Remove .php and .html extensions
# -----------------------------------------

# Redirect requests with .php or .html to clean URL
RewriteCond %{THE_REQUEST} \s([^.]+)\.(php|html) [NC]
RewriteRule ^ %1 [R=301,L]

# Internally rewrite clean URL to .php if exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Internally rewrite clean URL to .html if exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]
